<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">

      <%= form_with model: @installer, local: true, class: 'form-group' do |f| %>
        <% if @installer.errors.any? %>
          <div class="alert alert-danger">
            <h4 class="alert-heading">Please fix the following errors:</h4>
            <ul>
              <% @installer.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= f.label :name, class: 'form-label' %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= f.label :email, class: 'form-label' %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= f.label :territory, class: 'form-label' %>
          <p><%= current_user.territory.name %></p>
          <%= f.hidden_field :territory_id, value: current_user.territory.id %>
        </div>

        <div class="text-center">
          <%= f.submit 'Submit', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
