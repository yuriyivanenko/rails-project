<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <%= form_with model: @transaction, local: true do |f| %>
            <div class="mb-3">
              <%= f.label :installer, class: "form-label" %>
              <%= f.collection_select :installer_id, current_user.installers, :id, :name, {}, class: "form-select" %>
            </div>

            <%= f.hidden_field :territory_id, value: current_user.territory.id %>

            <div class="mb-3">
              <%= f.label :project_number, class: "form-label" %>
              <%= f.text_field :project_number, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :date, class: "form-label" %>
              <%= f.date_field :date, class: "form-control" %>
            </div>

            <div class="d-grid">
              <%= f.submit 'Submit', class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


